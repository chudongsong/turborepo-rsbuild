{
  "name": "@linglongos/utils",
  "version": "2.0.0",
  "description": "通用工具库 - 提供常用工具方法，包括校验、时间、颜色、文件、字符串等工具函数",
  "license": "MIT",
  "author": "",
  "type": "module",
  "main": "./dist/static/js/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/static/js/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "rsbuild build && tsc -p tsconfig.build.json",
    "dev": "rsbuild dev",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:rust": "rstest --coverage",
    "test:rust:watch": "rstest --watch",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "format": "biome format ./src",
    "format:fix": "biome format --write ./src",
    "check": "biome check ./src",
    "check:fix": "biome check --write ./src"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@rsbuild/core": "^1.0.0",
    "typescript": "^5.4.5",
    "@rstest/core": "^0.6.1",
    "@rstest/coverage-istanbul": "^0.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "vitest": "^3.2.4",
    "mockdate": "^3.0.5",
    "@types/mockdate": "^3.0.0"
  }
}
