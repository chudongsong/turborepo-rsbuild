{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "with-env": "dotenv -e ./.env --",
    "build": "pnpm with-env turbo build",
    "dev": "pnpm with-env turbo dev",
    "lint": "turbo lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "bash scripts/clean-modules.sh",
    "biome:check": "biome check .",
    "biome:check:fix": "biome check --write .",
    "biome:format": "biome format .",
    "biome:format:fix": "biome format --write .",
    "biome:lint": "biome lint .",
    "biome:lint:fix": "biome lint --write .",
    "biome:ci": "biome ci .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.5.2",
    "dotenv-cli": "^7.4.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "turbo": "^2.0.11",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@rematch/core": "^2.2.0",
    "react-redux": "^9.2.0"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "react": "19.2.0",
      "react-dom": "19.2.0",
      "@types/react": "^18.3.26",
      "@types/react-dom": "^18.3.7"
    }
  }
}
